{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <div class="container w-50">
        <h2 class="my-5 text-center">Please sign in</h2>

        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <form method="post" class="my-3 mx-auto">
            <div class="form-floating mb-3">
                <input type="email" value="{{ last_username }}" class="form-control" id="email" name="email"
                       placeholder="name@example.com" required>
                <label for="email">Email address</label>
            </div>
            <div class="form-floating">
                <input type="password" class="form-control" id="password" name="password" placeholder="Password"
                       required>
                <label for="password">Password</label>
            </div>
            <div class="form-check mt-2">
                <label class="form-check-label">
                    <input class="form-check-input" type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            <button type="submit" class="btn btn-primary my-3">Login</button>
            <br>
            <small>You don't have account? <a href="" class="text-decoration-none">Sign up!</a></small>
        </form>
    </div>

{% endblock %}